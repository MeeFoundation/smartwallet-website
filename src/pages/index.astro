---
import Layout from "@layouts/Layout.astro";
import { Header, Footer } from "mee-components";
import { header, footer } from "../../astro.config.mjs";
---

<Layout title="Mee Smartwallet">
  <Header header={header} location="Mee Smartwallet" />
  <main class="">
    <article
      class="relative mt-27 flex h-full min-h-screen w-screen flex-col items-center justify-between gap-16 overflow-hidden"
    >
      <section
        class="section top-0 z-100 mb-3.5 mt-16 flex h-full w-screen flex-col items-center justify-center md:mt-25"
      >
        <div
          class="flex max-w-150 flex-col items-center justify-center gap-4 px-6 transition-opacity duration-500 md:p-0"
        >
          <div class="overflow-hidden">
            <h1
              class="marker animate-riseIn text-center text-4xl font-semibold text-gray-900 lg:text-7xl lg:tracking-0.02"
            >
              Mee Smartwallet
            </h1>
          </div>
          <div class="overflow-hidden">
            <a
              class="animation-delay-800 block w-full animate-riseIn px-6 text-center text-xl leading-relaxed text-brand-600 underline md:text-2xl"
              href="/docs"
            >
              Docs <i class="bi bi-arrow-right"></i>
            </a>
          </div>
	  <div class="overflow-hidden">
	    <p
              class="marker mt-7 animate-riseIn text-3xl font-bold leading-thick md:text-4xl md:leading-normal lg:mt-13 lg:text-5xl">
              Our goal: To develop a trusted identity agent app that both holds your data and acts as a remote control for your personal data wherever it lives.
            </p>
	  </div>
        </div>
      </section>
      <div><Footer footer={footer} mode="dark" /></div>
    </article>
  </main>
</Layout>
<style>
  .bg-1 {
    content: "";
    position: absolute;
    border-top-left-radius: 50%;
    border-top-right-radius: 50%;
    min-height: 150vh;
    height: 140%;
    transform: translate3d(0, 0, 0);
    z-index: 1;
    width: 400vw;
  }
</style>
